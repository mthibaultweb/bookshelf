<h1>Publishers</h1>

<table class="table table-sm">
  <thead>
    <tr class="table-dark">
      <th>Name</th>
      <% if user_signed_in? %>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @publishers.each do |publisher| %>
      <tr scope="row">
        <td><%= link_to publisher.name, publisher, class: "link-dark" %>
        <% if user_signed_in? %>
          <td>
            <div class="btn-group" role="group" aria-label="Basic example">
              <%= link_to 'Edit', edit_publisher_path(publisher), class: "btn btn-sm btn-dark" %>
              <%= link_to 'Delete', publisher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Publisher', new_publisher_path, class: "btn btn-dark" %>
<% end %>