<h1>Publishers</h1>

<table class="table table-sm">
  <thead>
    <tr class="table-dark">
      <th>Name</th>
      <% if user_signed_in? %>
      <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @publishers.each do |publisher| %>
      <tr scope="row">
        <td><%= link_to publisher.name, publisher, class: "link-dark" %>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_publisher_path(publisher), class: "btn btn-light btn-sm" %></td>
          <td><%= link_to 'Destroy', publisher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Publisher', new_publisher_path, class: "btn btn-primary" %>
<% end %>

