<p id="notice"><%= notice %></p>

<h1>Publishers</h1>

<table class="table table-sm">
  <thead>
    <tr class="table-dark">
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publishers.each do |publisher| %>
      <tr scope="row">
        <td><%= publisher.name %></td>
        <td><%= link_to 'Show', publisher, class: "btn btn-light btn-sm" %></td>
        <td><%= link_to 'Edit', edit_publisher_path(publisher), class: "btn btn-light btn-sm" %></td>
        <td><%= link_to 'Destroy', publisher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Publisher', new_publisher_path, class: "btn btn-primary" %>
