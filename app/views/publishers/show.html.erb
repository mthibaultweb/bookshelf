<h1><%= @publisher.name %></h1>

<div class="row row-cols-2 row-cols-lg-3 g-3">
  <% @books.each do |book| %>
    <div class="col">
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= book.cover %>" class="cover" alt="Book's cover">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><a href="/books/<%= book.id %>" class="link-dark">
                <%= book.title %>
              </a></h5>
              <p class="card-text"><%= book.author.name %></p>
              <p class="card-text"><small class="text-muted"><%= book.publisher.name %></small></p>
              <p class="card-text"><small class="text-muted">Released in <%= book.release %></small></p>
            </div>
          </div>
        </div>
        <% if user_signed_in? %>
          <div class="card-footer text-muted text-end">
            <div class="btn-group" role="group" aria-label="Basic example">
              <%= link_to 'Edit', edit_book_path(book), class: "btn btn-sm btn-dark" %>
              <%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'Back to publishers', publishers_path, class: "btn btn-outline-dark" %>
