<p id="notice"><%= notice %></p>

<h1><%= @author.name %></h1>

<div class="row row-cols-2 row-cols-lg-3 g-3">
  <% @books.each do |book| %>
    <div class="col">
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= book.cover %>" class="cover" alt="Book's cover">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><a href="/books/<%= book.id %>" class="link-primary">
                <%= book.title %>
              </a></h5>
              
              <p class="card-text"><small class="text-muted"><%= book.publisher.name %></small></p>
            </div>
          </div>
        </div>
        <div class="card-footer text-muted">
        <%= link_to book.publisher.name, publisher_path %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Back to authors', authors_path, class: "btn btn-secondary" %>