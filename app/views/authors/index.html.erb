<h1>Authors</h1>

<table class="table table-sm">
  <thead>
    <tr class="table-dark">
      <th>Nom</th>
      <% if user_signed_in? %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr scope="row">
        <td><%= link_to author.name, author, class: "link-dark" %></td>
        <% if user_signed_in? %>
          <td>
            <div class="btn-group" role="group" aria-label="Basic example">
              <%= link_to 'Edit', edit_author_path(author), class: "btn btn-sm btn-dark" %>
              <%= link_to 'Delete', author, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Author', new_author_path, class: "btn btn-dark" %>
<% end %>
