<h1>Books</h1>

<table class="table table-responsive-lg table-sm">
  <thead>
    <tr class="table-dark">
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Release</th>
      <th>Description</th>
      <% if user_signed_in? %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr scope="row">
        <td><%= link_to book.title, book, class: "link-dark" %></td>
        <td><%= book.author.name %></td>
        <td><%= book.publisher.name %></td>
        <td><%= book.release %></td>
        <td><%= book.description %></td>
        <% if user_signed_in? %>
          <td>
            <div class="btn-group" role="group" aria-label="Basic example">
              <%= link_to 'Edit', edit_book_path(book), class: "btn btn-sm btn-dark" %>
              <%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Book', new_book_path, class: "btn btn-dark"  %>
<% end %>

