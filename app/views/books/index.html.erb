<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table table-responsive-lg table-sm">
  <thead>
    <tr class="table-dark">
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Release</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr scope="row">
        <td><%= book.title %></td>
        <td><%= book.author.name %></td>
        <td><%= book.publisher.name %></td>
        <td><%= book.release %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Show', book, class: "btn btn-light btn-sm" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-light btn-sm" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: "btn btn-primary"  %>
