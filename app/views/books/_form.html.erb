<%= simple_form_for @book do |f| %>
  <%= f.input :title %>
  <%= f.association :author, prompt: "Select the author" %>
  <%= f.association :publisher, prompt: "Select the publisher" %>
  <%= f.label(:release, :release) %>
  <%= f.date_field :release, prompt: "Release date" %>
  <%= f.input :description %>
  <%= f.input :cover %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>