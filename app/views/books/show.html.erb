<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= link_to @book.author.name, author_path(@author), class: "link-dark" %>
</p>

<p>
  <strong>Publisher:</strong>
  <%= link_to @book.publisher.name, publisher_path(@publisher), class: "link-dark" %>
</p>

<p>
  <strong>Release:</strong>
  <%= @book.release %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<img src="<%= @book.cover %>" alt="Book's cover" class="cover" >

<br>

<div class="btn-group" role="group" aria-label="Basic example">
<%= link_to 'Edit', edit_book_path(@book), class: "btn btn-dark"  %>
<%= link_to 'Back', books_path, class: "btn btn-outline-dark" %>
</div>