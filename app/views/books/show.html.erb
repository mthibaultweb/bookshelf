<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= link_to @book.author.name, author_path(@author) %>
</p>

<p>
  <strong>Publisher:</strong>
  <%= link_to @book.publisher.name, publisher_path(@publisher) %>
</p>

<p>
  <strong>Release:</strong>
  <%= @book.release %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<img src="<%= @book.cover %>" alt="Book's cover" class="cover" >


<%= link_to 'Edit', edit_book_path(@book), class: "btn btn-primary"  %> |
<%= link_to 'Back', books_path, class: "btn btn-secondary" %>
